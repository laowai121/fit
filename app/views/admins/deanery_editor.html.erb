<%= tinymce :language => "ru"%>

<%= form_for :page, :url => {:controller => "pages", :action => "deanery_" + @form_of_study, :form_of_study => @form_of_study} do |f| %>
	<%= f.label :title%></br>
  	<%= f.text_field :title%></br>

  	<%= f.label :body%></br>
  	<%= f.text_area :body, :class => "tinymce"%>
  
  	<%= f.label :category %>
    <%= select_tag(:category, options_for_select(["news","ad"])) %> <br>
  	<%= f.submit %>
<%end%>